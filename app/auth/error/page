// /app/auth/error/page.jsx
'use client';
import { useSearchParams } from 'next/navigation';
import Link from 'next/link';

export default function ErrorPage() {
  const searchParams = useSearchParams();
  const error = searchParams.get('error') || 'An unexpected error occurred';

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 text-white flex items-center justify-center">
      <div className="text-center p-8 bg-slate-900/50 backdrop-blur-xl rounded-3xl border border-slate-800/50">
        <h1 className="text-2xl font-bold mb-4">Authentication Error</h1>
        <p className="text-red-400 mb-6">{decodeURIComponent(error)}</p>
        <Link
          href="/auth/login"
          className="inline-block py-2.5 px-6 bg-gradient-to-r from-emerald-500 to-cyan-500 hover:from-emerald-600 hover:to-cyan-600 rounded-xl font-semibold"
        >
          Back to Login
        </Link>
      </div>
    </div>
  );
}